<nav id="navsignup">
  <i class="fa fa-twitter fa-3x" aria-hidden="true"></i>
  <%= link_to 'Sign Up', sign_up_path, class:"newsigninlink" %>
</nav>
  <div class="signinpage">

      <h1 id="join">Welcome Back to Twitter</h1>
      <%= form_tag  do %>
        <div class="textfield">
          <%= text_field_tag :email, nil, placeholder: 'Email', size:30 %>
        </div>
        <div class="textfield">
          <%= password_field_tag :password, nil, placeholder: 'Password', size:30  %>
        </div>


        <%= submit_tag "Log In", class: "newsignup" %>


      <% end %>

  </div>
